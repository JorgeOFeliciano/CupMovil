<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">





    <!-- Logo y menú -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#809D9898"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@drawable/baseline_menu_24"
            app:tint="@color/white"
            tools:ignore="MissingConstraints"  />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_circle_24"
            android:backgroundTint="#809D9898"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@drawable/baseline_local_grocery_store_24"
            app:tint="@color/white" />

    </LinearLayout>


<LinearLayout
    android:id="@+id/top_bar"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">



        <!-- Categoría: Café -->

    <!-- Botón: Café -->
    <Button
        android:id="@+id/btnCafe"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:background="@drawable/cafe_menus"
        android:text="CAFÉ"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón: Pizza (cuadro grande) -->
    <Button
        android:id="@+id/btnPizza"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@drawable/pizza_image"
        android:text="PIZZA"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:backgroundTint="#80000000"
        app:layout_constraintTop_toBottomOf="@id/btnCafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightGrid"
        app:layout_constraintWidth_percent="0.6" />

    <!-- Grid a la derecha (Alitas, Cerveza, Hamburguesa, Postre) -->
    <GridLayout
        android:id="@+id/rightGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/btnCafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <!-- Botón: Alitas -->
        <Button
            android:id="@+id/btnAlitas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/alitas_image"
            android:text="ALITAS"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#80000000"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <!-- Botón: Cerveza -->
        <Button
            android:id="@+id/btnCerveza"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/cerveza_image"
            android:text="CERVEZA"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#80000000"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <!-- Botón: Hamburguesa -->
        <Button
            android:id="@+id/btnHamburguesa"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/hamburguesa_image"
            android:text="HAMBURGUESA"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#80000000"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <!-- Botón: Postre -->
        <Button
            android:id="@+id/btnPostre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/postre_image"
            android:text="POSTRE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#80000000"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
    </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>