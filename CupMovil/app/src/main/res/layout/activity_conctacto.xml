<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fillViewport="true"
    tools:context=".Conctacto">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_especiales"
        android:alpha="0.9"/>

    <!-- Overlay oscuro para contraste -->
    <View
        android:id="@+id/dark_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <!-- Contenido del formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/rounded_button_background"
            android:layout_gravity="center">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get in touch"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let’s chat about how our expert team can help."
                android:textSize="16sp"
                android:textColor="#DDDDDD"
                android:paddingBottom="16dp" />

            <!-- Nombre y Apellido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="8dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="First name"
                    android:background="@drawable/rounded_button_background"
                    android:padding="12dp"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Last name"
                    android:background="@drawable/rounded_button_background"
                    android:padding="12dp"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Email -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/rounded_button_background"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Número de teléfono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone number"
                    android:background="@drawable/rounded_button_background"
                    android:padding="12dp"
                    android:inputType="phone"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Mensaje -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Leave us a message..."
                android:background="@drawable/rounded_button_background"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Botón Enviar -->
            <Button
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F68B10"
                android:text="Send message"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
