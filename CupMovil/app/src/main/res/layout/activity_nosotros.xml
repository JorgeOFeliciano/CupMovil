<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Nosotros">

    <!-- Sección Nosotros -->
    <LinearLayout
        android:id="@+id/nosotros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contenedorMisionyVision">

        <!-- nosotros -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="285dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_nosotros"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nosotrosTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/nosotros_titulo"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nosotrosDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/nosotros_descripcion"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Sección Misión y Visión -->
    <LinearLayout
        android:id="@+id/contenedorMisionyVision"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:paddingBottom="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Misión -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_mision"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/misionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mision_titulo"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/misionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/mision_descripcion"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Visión -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_vision"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/visionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vision_titulo"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/vision_descripcion"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Menú flotante con submenús -->
    <LinearLayout
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="1dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Botón del submenú 1 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BEBAB6"
            android:contentDescription="Opción 1"
            android:layout_margin="8dp"
            app:tint="@color/white"
            app:srcCompat="@drawable/baseline_favorite_24"/>

        <!-- Botón del submenú 2 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#BEBAB6"
            android:contentDescription="Opción 2"
            app:tint="@color/white"
            app:srcCompat="@drawable/baseline_fastfood_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="Opción 2"
            android:backgroundTint="#F68B10"
            app:tint="@color/white"
            app:srcCompat="@drawable/baseline_coffee_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="Opción 2"
            android:backgroundTint="#BEBAB6"
            app:tint="@color/white"
            app:srcCompat="@drawable/baseline_table_bar_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#BEBAB6"
            android:contentDescription="Opción 2"
            app:tint="@color/white"
            app:srcCompat="@drawable/baseline_people_24" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>